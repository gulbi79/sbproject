<mapper namespace="com.demo.boot.common.db2repository.MenuRepository">

    <!-- 메뉴정보 조회 -->
    <select id="menuInfo" parameterType="String" resultType="hashmap">
        /* db2 menuInfo */
        /*
        SELECT MENU_CD, MENU_NM, PARENT_MENU_CD, URL, USE_YN
        FROM TB_MST_MENU
        */
        SELECT ROLE_CD
        FROM TB_MAP_ROLE
        WHERE USER_ID = 'user1'
